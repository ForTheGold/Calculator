<CustButton@Button>:
    font_size: 32

<CalcGridLayout>:
    id: calculator
    display: entry_label
    rows: 8
    padding: 50
    spacing: 10

    BoxLayout:
        TextInput:
            id: entry_text
            font_size: 32
            multiline: False

    BoxLayout:
        Label:
            id: entry_label
            font_size: 32
            multiline: False

    BoxLayout:
        spacing: 10
        CustButton:
            text: "%"
            on_press: entry_text.text = str(float(calculator.calculate(entry_text.text))*(0.1))
            on_press: entry_label.text = str(float(calculator.calculate(entry_text.text))*(0.1))
        CustButton:
            text: "sqrt"
            on_press: entry_text.text = str(float(calculator.calculate(entry_text.text))**(0.5))
            on_press: entry_label.text = str(float(calculator.calculate(entry_text.text))**(0.5))
        CustButton:
            text: "sq"
            on_press: entry_text.text = str(float(calculator.calculate(entry_text.text))**(2))
            on_press: entry_label.text = str(float(calculator.calculate(entry_text.text))**(2))
        CustButton:
            text: "1/x"
            on_press: entry_text.text = str(1/float(calculator.calculate(entry_text.text)))
            on_press: entry_label.text = str(1/float(calculator.calculate(entry_text.text)))

    BoxLayout:
        spacing: 10
        CustButton:
            text: "CE"
            on_press: entry_text.text = ""
            on_press: entry_label.text = ""
        CustButton:
            text: "C"
            on_press: entry_label.text = ""
        CustButton:
            text: "BK"
            on_press: entry_text.text = entry_text.text[:-1]
        CustButton:
            text: "/"
            on_press: entry_text.text += self.text
            on_press: entry_label.text = calculator.calculate(entry_text.text)

    BoxLayout:
        spacing: 10
        CustButton:
            text: "7"
            on_press: entry_text.text += self.text
        CustButton:
            text: "8"
            on_press: entry_text.text += self.text
        CustButton:
            text: "9"
            on_press: entry_text.text += self.text
        CustButton:
            text: "*"
            on_press: entry_text.text += self.text
            on_press: entry_label.text = calculator.calculate(entry_text.text)

    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_press: entry_text.text += self.text
        CustButton:
            text: "5"
            on_press: entry_text.text += self.text
        CustButton:
            text: "6"
            on_press: entry_text.text += self.text
        CustButton:
            text: "-"
            on_press: entry_text.text += self.text
            on_press: entry_label.text = calculator.calculate(entry_text.text)

    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: entry_text.text += self.text
        CustButton:
            text: "2"
            on_press: entry_text.text += self.text
        CustButton:
            text: "3"
            on_press: entry_text.text += self.text
        CustButton:
            text: "+"
            on_press: entry_text.text += self.text
            on_press: entry_label.text = calculator.calculate(entry_text.text)


    BoxLayout:
        spacing: 10
        CustButton:
            text: "+/-"
            on_press: entry_text.text = str(-float(calculator.calculate(entry_text.text)))
            on_press: entry_label.text = str(-float(calculator.calculate(entry_text.text)))
        CustButton:
            text: "0"
            on_press: entry_text.text += self.text
        CustButton:
            text: "."
            on_press: entry_text.text = calculator.decimal(entry_text.text)

        CustButton:
            text: "="
            on_press: entry_label.text = calculator.calculate(entry_text.text)
